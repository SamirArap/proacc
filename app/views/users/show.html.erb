<div class="container">
  <div class="row">
    <div class="col-md-3 text-center">
      <%= image_tag @user.profile.avatar.url, class: 'avatar-show-img' %>
    </div>
    <div class="col-md-6">
      <h1><%= @user.profile.first_name %>  <%= @user.profile.last_name %></h1>
      <h4><span class="job_title_icon"><%= job_title_icon %></span><%= @user.profile.job_title %></h4>

      <% if current_user.plan_id == 2 %>
        <div class="well profile-block profile-contact-info">
          <h4>Contact info</h4>
          <% if current_user.plan_id == 2 %>
              <%= @user.profile.phone_number %><br>
              <%= @user.profile.contact_email %>
          <% end %>
        </div>
      <% end  %>

      <div class="well profile-block profile-description">
        <h4>Description</h4>
        <%= @user.profile.description %>
      </div>
    </div>
  </div>
</div>