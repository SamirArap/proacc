<div class="row">
  <div class="col-md-4">
    Our google location
  </div>
  <div class="col-md-8">
    <div class="well">
      <h2 class="text-center">Contatc Us</h2>

      <%= form_for @contact do |f| %>

        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :email %>
          <%= f.text_field :email, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :comments %>
          <%= f.text_area :comments, class: "form-control" %>
        </div>

        <div class="submit">
          <%= f.submit "Submit", class: "btn btn-success" %>
        </div>

      <% end %>

    </div>
  </div>
</div>
