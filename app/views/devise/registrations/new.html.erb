<div class="row">
  <div class="col-md-4 col-md-offset-4">

      <% if params[:plan] == '2' %>

        <div class="text-center">
          <h1>Pro Account</h1>
            <p>Sign up for pro account for $9.99/month ... </p>
        </div>
          <div class="well">
            <%= render "pro_form" %>
          </div>

      <%else%>

        <div class="text-center">
          <h1>Basic Account</h1>
          <p>Sign up for free and ...</p>
        </div>
          <div class="well">
            <%= render "basic_form" %>
          </div>

      <% end %>

  </div>
</div>
